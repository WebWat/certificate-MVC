@model CertificateViewModel
@{
    ViewData["Title"] = Localizer["Title"];
}

<h1 class="caption">@Localizer["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-6" style="word-wrap: break-word;">
        <h5>@Localizer["AwardTitle"]</h5>
        <p>@Html.DisplayFor(model => model.Title)</p>
        <br />
        <h5>@Localizer["Description"]</h5>
        <p>@Html.DisplayFor(model => model.Description)</p>
        <br />
        <h5>@Localizer["Stage"]</h5>
        <p>
            @switch (Model.Stage)
            {
                case 1:
                    @Localizer["School"]
                    break;
                case 2:
                    @Localizer["District"]
                    break;
                case 3:
                    @Localizer["Republican"]
                    break;
                case 4:
                    @Localizer["All-Russian"]
                    break;
                case 5:
                    @Localizer["International"]
                    break;
            }
        </p>
        <br />
        <h5>@Localizer["Date"]</h5>
        <p>@Html.DisplayFor(model => model.Date)</p>
        <br />
        <h5>@Localizer["Links"]</h5>
        @if (Model.Links.Count != 0)
        {
            <ul class="list-group">
                @foreach (var a in Model.Links)
                {
                    <li class="list-group-item"><a href="@a.Name" target="_blank">@a.Name</a></li>
                }
            </ul>
        }
        else
        {
            <p>Отсутствуют</p>
        }
        <a asp-controller="Public" asp-action="Index" asp-route-uniqueUrl="@Model.UniqueUrl" class="btn btn-primary mt-3">@Localizer["Back"]</a>
    </div>
    <div class="col-md-6 col-md-offset-2">
        @if (Model.ImageData != null && Model.ImageData.Length > 0)
        {
        <p><img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.ImageData))" class="img-fluid img-thumbnail ms-image-details"></p>
        }
    </div>
</div>

