@model CertificateViewModel
@{
    ViewData["Title"] = "Подробнее";
}

<h1 class="caption">@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-6" style="word-wrap: break-word;">
        <h5>Название</h5>
        <p>@Html.DisplayFor(model => model.Title)</p>
        <br />
        <h5>Описание</h5>
        <p>@Html.DisplayFor(model => model.Description)</p>
        <br />
        <h5>Этап</h5>
        <p>
            @switch (Model.Stage)
            {
                case 1:
                    @:Школьный
                    break;
                case 2:
                    @:Районный
                    break;
                case 3:
                    @:Республиканский
                    break;
                case 4:
                    @:Всероссийский
                    break;
                case 5:
                    @:Международный
                    break;
            }
        </p>
        <br />
        <h5>Дата</h5>
        <p>@Html.DisplayFor(model => model.Date)</p>
        <br />
        <h5>Ссылки</h5>
        @if (Model.Links.Count != 0)
        {
            <ul class="list-group">
                @foreach (var a in Model.Links)
                {
                    <li class="list-group-item"><a href="@a.Name" target="_blank">@a.Name</a></li>
                }
            </ul>
        }
        else
        {
            <p>Отсутствуют</p>
        }
        <a asp-controller="Public" asp-action="Index" asp-route-uniqueUrl="@Model.UniqueUrl" class="btn btn-primary mt-3">Назад к списку</a>
    </div>
    <div class="col-md-6 col-md-offset-2">
        @if (Model.ImageData != null && Model.ImageData.Length > 0)
        {
        <p><img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.ImageData))" class="img-fluid img-thumbnail ms-image-details"></p>
        }
    </div>
</div>

