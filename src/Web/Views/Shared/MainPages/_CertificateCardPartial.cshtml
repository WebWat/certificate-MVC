@model CertificateViewModel

<div class="row no-gutters">
    <div class="col-md-4 ms-image">
        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.ImageData))" class="card-img">
    </div>
    <div class="col-md-8">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">@Model.Description</p>
            <p class="card-text"><small class="text-muted">@Model.Date.ToShortDateString()</small></p>
        </div>
    </div>
</div>
