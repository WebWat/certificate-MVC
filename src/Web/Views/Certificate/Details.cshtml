@model CertificateViewModel
@inject IStageService Service 
@{
    ViewData["Title"] = Localizer["Title"];

    string converted = Convert.ToBase64String(Model.ImageData);
}

<partial name="MainPages/_DeleteModalPartial" />

<h1 class="caption">@Localizer["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-6 break-word">
        
        <partial name="MainPages/_CertificateDetailsPartial" model="@Model"/>

        <p>
            <a class="btn btn-info btn-sm mt-2 mb-3" 
               asp-controller="Link" 
               asp-action="Index" 
               asp-route-id="@Model.Id">@Localizer["Manage"]
            </a>
        </p>
        <div class="btn-group buttons-padding mb-3" role="group">
            <a asp-controller="Certificate" asp-action="Index" asp-route-page="@Model.Page" class="btn btn-primary">@Localizer["Back"]</a>
            <a asp-controller="Download" asp-action="Jpg" asp-route-id="@Model.Id" class="btn btn-primary">@Localizer["Download"]</a>
            <a asp-controller="Certificate" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">@Localizer["Change"]</a>
            <a asp-controller="Certificate" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger delete">@Localizer["Delete"]</a>
        </div>
    </div>
    <div class="col-md-6">
        <a href="data:image/jpeg;base64,@converted" data-lightbox="image-@Model.Id" data-title="@Model.Title">
            <img src="data:image/jpeg;base64,@converted" class="img-fluid img-thumbnail ms-image-details" />
        </a>
    </div>
</div>

@section Scripts
{
    <script src="~/lib/lightbox2/js/lightbox.js"></script>
    <script type="text/javascript" src="~/js/modalWindow.js" asp-append-version="true"></script>
}
