@model IndexViewModel
@{
    ViewData["Title"] = "Главная";
}

<h1 class="caption">@ViewData["Title"]</h1>
<div class="card mb-3">
    <div class="card-body">
        <div class="d-flex justify-content-between">
            <a class="btn btn-success bd-highlight" style="width:7em;" asp-controller="Certificate" asp-action="Create">
                Создать
            </a>
            <a class="btn btn-light bd-highlight" style="width:12em;" onclick="copy()">
                Скопировать ссылку
            </a>
        </div>
    </div>
</div>
<div class="card mb-3">
    <div class="card-body">
        <form method="get">
            <div class="d-flex justify-content-between">
                <div class="col-md-8 p-0">
                    <input asp-for="Find" class="form-control" placeholder="Введите название награды" maxlength="30" />
                </div>
                <select asp-for="Year" asp-items="Model.Years" class="form-control ml-1 col-md-3 mr-1"></select>
                <input type="submit" value="Поиск" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>
<div class="preloader">
    <div class="preloader-center">
        <div class="spinner-border text-primary" style="width: 4rem; height: 4rem;" role="status">
        </div>
    </div>
</div>
@if (Model.Certificates.Any())
{
    <div class="row index">
        @foreach (var item in Model.Certificates)
        {
            <div class="col-sm-6">
                <div class="card mb-3 anim" onclick="start(@item.Id)">
                    <div class="row no-gutters">
                        <div class="col-md-4 ms-image">
                            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.ImageData))" class="card-img">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@item.Title</h5>
                                <p class="card-text">@item.Description</p>
                                <p class="card-text"><small class="text-muted">@item.Date.ToShortDateString()</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center mt-5 index">
        <h2 class="font-weight-normal op-6">Ничего не найдено</h2>
    </div>
}

@section Scripts
{
    <script type="text/javascript" src="~/js/certificate.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/autocomplete.js" asp-append-version="true"></script>
}


