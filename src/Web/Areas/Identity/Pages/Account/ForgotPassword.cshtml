@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = Localizer["Title"];
}

<form class="form-signin" asp-antiforgery="true">
    <div class="text-center mb-4">
        <h1 class="h1 mb-3 font-weight-normal">@Localizer["Title"]</h1>
        <h5>@Localizer["Action"]</h5>
    </div>
    <div class="form-label-group">
        <input asp-for="Input.Email" class="form-control" autofocus>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <button class="btn btn-lg btn-primary btn-block mt-4" type="submit">@Localizer["Send"]</button>
    <p class="mt-4 mb-3 text-muted text-center">2020 - APP9 - v2.0</p>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
