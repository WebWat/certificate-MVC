@page
@model LoginModel
@{
    ViewData["Title"] = Localizer["Title"];
}

<form class="form-signin" asp-antiforgery="true">
    <div class="text-center mb-4">
        <h1 class="h1 mb-3 font-weight-normal">@Localizer["Title"]</h1>
        <h5>@Localizer["Description"]</h5>
    </div>
    <div asp-validation-summary="ModelOnly" class="alert alert-danger list-style-none"></div>
    <div class="form-label-group">
        <label asp-for="Input.UserNameOrEmail"></label>
        <input asp-for="Input.UserNameOrEmail" class="form-control" autofocus>
        <span asp-validation-for="Input.UserNameOrEmail" class="text-danger"></span>
    </div>
    <div class="form-label-group">
        <div class="d-flex justify-content-between">
            <label asp-for="Input.Password"></label>
            <a asp-page="./ForgotPassword" tabindex="-1">@Localizer["ForgotPassword"]</a>
        </div>
        <input asp-for="Input.Password" class="form-control">
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="checkbox mb-3">
        <label asp-for="Input.RememberMe">
            <input asp-for="Input.RememberMe" />
            @Html.DisplayNameFor(m => m.Input.RememberMe)
        </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">@Localizer["SignIn"]</button>
    <a class="mt-3 text-center d-block f-s" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">@Localizer["Register"]</a>
    <partial name="_ApplicationNamePartial" />
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
